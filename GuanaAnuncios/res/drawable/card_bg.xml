<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/second_grey" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/card_padding_bottom"
        android:left="@dimen/card_padding_left"
        android:right="@dimen/card_padding_right"
        android:top="@dimen/card_padding_top">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/card_radius" />

            <solid android:color="@color/card_shadow" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/card_padding_shadown"
        android:left="@dimen/card_padding_left"
        android:right="@dimen/card_padding_right"
        android:top="@dimen/card_padding_top">
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/card_radius" />

            <solid android:color="@color/card_white" />

            <padding
                android:bottom="@dimen/card_padding_text"
                android:left="@dimen/card_padding_text"
                android:right="@dimen/card_padding_text"
                android:top="@dimen/card_padding_text" />
        </shape>
    </item>

</layer-list>