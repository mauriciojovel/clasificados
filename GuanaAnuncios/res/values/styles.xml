<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
        Theme.AppCompat.Light.DarkActionBar
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- 
        <item name="android:windowActionBarOverlay">true</item>
         -->
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- 
        <item name="windowActionBarOverlay">true</item>
         -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="bigBoldtext">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="boldText">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    
    <!-- Login buttons theme. -->
    <style name="button_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <!-- item name="android:layout_margin">3dp</item-->
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    
    <!-- Card Styles -->
    <style name="CardTextContent">
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">@dimen/card_space_interline</item>
        <item name="android:paddingLeft">@dimen/card_padding_detail</item>
        <item name="android:paddingRight">@dimen/card_padding_detail</item>
    </style>
    <style name="CardTextTitle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="CardImage">
        <item name="android:padding">@dimen/card_image_padding</item>
        <item name="android:scaleType">matrix</item>
        <item name="android:layout_width">@dimen/card_image_preview_width</item>
        <item name="android:layout_height">@dimen/card_image_preview_height</item>
    </style>
    <style name="CardRuler">
        <item name="android:layout_height">@dimen/card_ruler_height</item>
        <item name="android:background">@color/card_shadow</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/card_ruler_margin</item>
        <item name="android:layout_marginBottom">@dimen/card_ruler_margin</item>
    </style>
    
    <!-- Action Bar Style -->
   <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_background</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/actionbar_background</item>
    </style>
</resources>
