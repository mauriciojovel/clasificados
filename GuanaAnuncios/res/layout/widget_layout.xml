<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_top_bar" >

        <ImageView
                android:id="@+id/wgLogo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/guana_logo_g" />
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titulo_widget"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textColor="#ffffff" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@drawable/widget_body" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/leftArrow"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_gravity="left"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:layout_marginTop="65dp"
                android:src="@drawable/ic_left_arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/wgTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/thumbnail"
                android:text="Clasificado titulo.."
                android:textColor="#040404"
                android:textSize="13dp"
                android:textStyle="bold"
                android:visibility="invisible"
                android:typeface="sans" />

            <TextView
                android:id="@+id/wgDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aqui deberia estar cada anuncio!"                
                android:textSize="11dp"
                android:layout_marginBottom="7dp"
                android:visibility="invisible"
                android:textColor="#000000" />

            <ProgressBar
                android:id="@+id/wgProgress"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content" />
            
            <TextView
                android:id="@+id/codigoAnuncio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/rightArrow"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_gravity="right"
                android:layout_marginTop="65dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/ic_right_arrow" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
